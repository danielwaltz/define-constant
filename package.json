{
  "name": "ts-define-constant",
  "version": "1.2.0",
  "description": "Type safe utility for defining static constants with automatic type narrowing and additional helper functions",
  "license": "MIT",
  "author": "Daniel Waltz",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielwaltz/ts-define-constant.git"
  },
  "keywords": [
    "utility",
    "typescript",
    "constant",
    "narrowing",
    "type-narrowing"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "chore",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --no-fix --ignore-path .gitignore --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest",
    "test:type-check": "vitest typecheck",
    "test": "run-p test:unit test:type-check",
    "release": "standard-version",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.5",
    "standard-version": "^9.5.0",
    "tsup": "^7.0.0",
    "type-fest": "^3.12.0",
    "typescript": "~5.0.4",
    "vitest": "^0.32.2"
  }
}
